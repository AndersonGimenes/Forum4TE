@using Forum4TE.Security;

@if (UserToken.IsLoged)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Forum" asp-action="Get">Welcome @UserToken.UserName</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Forum" asp-action="UpdateList">My Posts</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Create">New User</a>
    </li>
}
